# Railway Environment Variables Template
# Copy these to Railway's environment variables section

# Basic Configuration
MIX_ENV=prod
PHX_HOST=${{RAILWAY_PUBLIC_DOMAIN}}
SECRET_KEY_BASE=${{SECRET_KEY_BASE}}
DATABASE_URL=${{DATABASE_URL}}
PORT=4000

# Frontend URLs
REACT_APP_URL=${{RAILWAY_PUBLIC_DOMAIN}}
BACKEND_URL=${{RAILWAY_PUBLIC_DOMAIN}}

# Database SSL (Railway PostgreSQL requires SSL)
REQUIRE_DB_SSL=true

# Optional: Email (you can configure later)
FROM_ADDRESS=noreply@${{RAILWAY_PUBLIC_DOMAIN}}

# Optional: File uploads (disable for now)
REACT_APP_FILE_UPLOADS_ENABLED=0

# Optional: Analytics (can add later)
REACT_APP_GOOGLE_ANALYTICS_ID=

# Security
USE_IP_V6=false